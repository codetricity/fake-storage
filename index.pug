doctype html

html
  head
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"  crossorigin="anonymous")
  body
    .div.p-5
      h1 RICOH THETA X Sample Images
      .row
        .col-l-2.col-md-3.col-sm-4
          - var n = 1;
          - var i = 10
          - const maxThumb = 17
          ul
            while n < 10
              - var filename = "R001000" + n + ".JPG"
              - var path = "files/100RICOH/" + filename
              li
                a(href=path) #{filename}
              - n++
            while i < maxThumb
              - var filename2 = "R00100" + i + ".JPG"
              - var path2 = "files/100RICOH/" + filename2

              li 
                a(href=path2) #{filename2}
              - i++
        // thumbnail area
        .col-l-8.col-md-6.col-sm-4
          .row
            - var num = 1
            while num < 10
              - var thumbname = "R001000" + num + ".JPG"
              - var thumbpath = "files/100RICOH/thumb/" + thumbname
              - var linkpath = "files/100RICOH/" + thumbname

              .col.md-2.pb-2
                a(href=linkpath).card(style='width:250px;')
                  img(src=thumbpath ).card-img-top 
                  .card-body
                    .card-text #{thumbname}
              - num++            
            while num < maxThumb
              - var thumbname2 = "R00100" + num + ".JPG"
              - var thumbpath2 = "files/100RICOH/thumb/" + thumbname2
              - var linkpath2 = "files/100RICOH/" + thumbname2

              .col.md-2.pb-2
                a(href=linkpath2).card(style='width:250px;')
                  img(src=thumbpath2 ).card-img-top 
                  .card-body
                    .card-text #{thumbname2}
              - num++            
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"  crossorigin="anonymous")

